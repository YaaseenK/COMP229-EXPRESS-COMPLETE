<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

  <!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <lable for="nameTextFeild">Book Title</lable>
                    <input type="text" class="form-control"
                    id="nameTextFeild"
                    placeholder="Enter the Book Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <lable for="authorTextFeild">Author</lable>
                    <input type="text" class="form-control"
                    id="authorTextFeild"
                    placeholder="Enter the Author of the Book"
                    name="author" required>
                </div>

                <div class="form-group">
                    <lable for="publishedTextFeild">Year</lable>
                    <input type="text" class="form-control"
                    id="publishedTextFeild"
                    placeholder="Enter the Year of Publication"
                    name="published" required>
                </div>

                <div class="form-group">
                    <lable for="descriptionTextFeild">Description</lable>
                    <textarea type="text" class="form-control"
                    id="adescriptionTextFeild"
                    placeholder="Enter a brief description of the book"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <lable for="costTextFeild">Cost</lable>
                    <input type="number" class="form-control"
                    id="costTextFeild"
                    placeholder="Enter the Price of the Book"
                    name="cost" required>
                </div>

                <button class="btn btn-primary">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>

    </div>
</div>
  
  
<%- include ../partials/bottom_nav.ejs %>  
  
